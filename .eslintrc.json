{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "settings": {
        "react": {
            "version": "16.0"
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "space-before-function-paren": 0,
        "no-extra-semi": "error",
        "indent": "error"
    }
}